<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:elevation="0dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avimg"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/pimg"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFF"
         />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_toRightOf="@id/avimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/avname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="19sp"
            android:textColor="#232323"
            />
        <TextView
            android:id="@+id/avemaill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lloydmwiti@gmail.com"
            android:textSize="15sp"/>

    </LinearLayout>
    <ImageButton
        android:src="@drawable/ic_more_horiz_black_24dp"
        android:layout_width="50dp"
        android:tint="#230083"
        android:background="@drawable/circle"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"

        android:layout_marginRight="5dp"/>
    <ImageView
        android:id="@+id/avpost"
        android:scaleType="fitEnd"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/avimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_design"
        android:backgroundTint="#DADADA"/>


</RelativeLayout>