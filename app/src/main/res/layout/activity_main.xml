<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/viseti"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/slight_curve_light"
            android:backgroundTint="#FF5722"
            android:layout_marginTop="-135dp"
            android:layout_marginBottom="25dp"
            android:elevation="20dp"
            android:translationZ="12dp"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Welcome To Fire Base Login "
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Create an account below"
                android:textColor="#E6E6E6"
                android:textSize="24sp"
                android:layout_marginBottom="20dp"

                android:paddingHorizontal="15dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_light"
            android:hint="name"
            android:layout_marginHorizontal="10dp"
            android:textColor="#474747"
            android:textSize="21sp"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp">

        </EditText>

        <EditText
            android:id="@+id/emailInput"
            android:layout_marginHorizontal="10dp"

            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/outline_light"
            android:layout_marginBottom="10dp"
            android:hint="email"
            android:textSize="21sp"
            android:elevation="4dp"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp">

        </EditText>
        <EditText
            android:id="@+id/ageInput"
            android:inputType="number"
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/outline_light"
            android:layout_marginBottom="10dp"
            android:hint="age"
            android:textSize="21sp"
            android:elevation="4dp"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp">

        </EditText>
        <EditText
            android:id="@+id/passwordInput"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="46dp"
            android:background="@drawable/outline_light"
            android:layout_marginBottom="10dp"
            android:hint="password"
            android:textSize="21sp"
            android:elevation="4dp"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp">

        </EditText>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="45dp"
            android:background="@drawable/buttondesign"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/bottomcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"

                android:textSize="21sp"
                android:textColor="@color/text_grey"
                android:text="@string/press_next"
                android:layout_height="50dp">

            </TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"

                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:textSize="19sp"
                android:text="login"
                android:textColor="#4646FF">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>