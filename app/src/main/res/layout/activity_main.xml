<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pimg"
    android:gravity="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/slight_curve_light"
            android:backgroundTint="#673AB7"
            android:elevation="25dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:translationZ="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Welcome To Fire Base Login "
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Create an account below"
                android:textColor="#E6E6E6"
                android:textSize="24sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_light"
            android:backgroundTint="@color/white"
            android:hint="name"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp"
            android:textColor="#474747"
            android:textSize="21sp">

        </EditText>

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_light"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp"
            android:textSize="21sp">

        </EditText>

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_light"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:hint="age"
            android:inputType="number"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp"
            android:textSize="21sp">

        </EditText>

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="10dp"

            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_light"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingVertical="3dp"
            android:paddingLeft="15dp"
            android:textSize="21sp">

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputdesigndark"
            android:text="Create Account"
            android:textColor="#D3BFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/bottomcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:gravity="center"
                android:text="@string/press_next"
                android:textColor="@color/white"
                android:textSize="21sp">

            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginRight="10dp"
                android:elevation="0dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="login"
                android:textColor="#2196F3"
                android:textSize="19sp">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>